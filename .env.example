# App
APP_NAME=FamilyMoneyTrack
APP_ENV=local
APP_URL=http://localhost:8000
APP_TIMEZONE=Europe/Budapest
APP_LOCALE=hu
APP_CURRENCY=HUF

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=family_money_track
DB_USER=root
DB_PASS=

# Mail (SMTP)
MAIL_FROM_ADDRESS=no-reply@example.com
MAIL_FROM_NAME=FamilyMoneyTrack
MAIL_SMTP_HOST=smtp.example.com
MAIL_SMTP_PORT=587
MAIL_SMTP_USER=
MAIL_SMTP_PASS=
MAIL_SMTP_ENCRYPTION=tls

# OCR (self-hosted Tesseract)
OCR_PROVIDER=tesseract
TESSERACT_BIN=/usr/bin/tesseract
OCR_LANGUAGE=hun+eng
OCR_TIMEOUT_SECONDS=20
OCR_MAX_RETRIES=2

# Storage
STORAGE_DRIVER=local
RECEIPTS_STORAGE_PATH=storage/receipts

# Push notifications (VAPID)
PUSH_VAPID_PUBLIC_KEY=
PUSH_VAPID_PRIVATE_KEY=
PUSH_VAPID_SUBJECT=mailto:support@example.com

# Rate limits
RATE_LIMIT_LOGIN_PER_MIN=10
RATE_LIMIT_API_PER_MIN=120

# Branding
BRAND_LOGO_URL=
BRAND_SUPPORT_EMAIL=support@example.com

# Logging
LOG_LEVEL=info
